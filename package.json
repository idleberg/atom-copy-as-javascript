{
	"name": "copy-as-javascript",
	"version": "0.1.0",
	"description": "Converts TypeScript into plain JavaScript and puts it in the clipboard.",
	"private": false,
	"main": "./lib/index.js",
	"scripts": {
		"build": "tsup",
		"dev": "npm run build -- --watch",
		"lint:md": "remark . --quiet --frail --ignore-path .gitignore",
		"lint:ts": "eslint ./src --ignore-pattern .gitignore --no-warn-ignored",
		"lint": "npm-run-all lint:*",
		"prepublishOnly": "npm run build",
		"start": "npm run dev",
		"test": "npm run lint",
		"prepare": "husky"
	},
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/atom-copy-as-javascript"
	},
	"homepage": "https://atom.io/packages/copy-as-javascript",
	"bugs": {
		"url": "https://github.com/idleberg/atom-copy-as-javascript/issues"
	},
	"license": "MIT",
	"engines": {
		"atom": ">=1.56.0 <2.0.0"
	},
	"activationCommands": {
		"atom-workspace": [
			"copy-as-javascript:copy-as-javascript"
		]
	},
	"activationHooks": [
		"core:loaded-shell-environment"
	],
	"dependencies": {
		"@atxm/developer-console": "^0.6.1",
		"decaffeinate": "^8.1.4",
		"diff": "^7.0.0",
		"normalize-newline": "^4.1.0"
	},
	"devDependencies": {
		"@types/atom": "^1.40.11",
		"@types/node": "^14",
		"eslint": "^9.11.0",
		"eslint-plugin-jsonc": "^2.16.0",
		"eslint-plugin-unicorn": "^55.0.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"npm-run-all2": "^6.2.3",
		"prettier": "^3",
		"remark-cli": "^12",
		"tslib": "^2.3.1",
		"tsup": "^8.3.0",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.6.0"
	},
	"lint-staged": {
		"*.(json|ts)": [
			"eslint --cache --fix",
			"prettier --write"
		],
		"*.{md,yml}": "prettier --write"
	}
}
